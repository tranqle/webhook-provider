// https://json.schemastore.org/eslintrc
{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    // https://eslint.org/docs/rules/
    "rules": {
        "semi": 0,
        "no-var": 2,
        "no-console": 2,
        "no-alert": 2,
        "no-debugger": 2,
        "space-before-function-paren": [2, {"anonymous": "always", "named": "never"}],
        "yoda": 0,
        "arrow-parens": [0, "always"],
        "arrow-spacing": 2,
        "brace-style": [2, "stroustrup"],
        "padded-blocks": 0,
        "newline-after-var": 0,
        "spaced-comment": 0,
        "max-len": [2, 100, 4, {"ignoreUrls": true}],
        "array-bracket-spacing": [2, "never"],
        "computed-property-spacing": [2, "never"],
        "no-trailing-spaces": [2, {"skipBlankLines": true}],
        "object-curly-spacing": [2, "never"],
        "generator-star-spacing": 0,
        "comma-dangle": ["error", {
            "arrays": "never",
            "objects": "never",
            "imports": "never",
            "exports": "never",
            "functions": "never"
        }]
    }
}
